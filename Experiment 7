#include <stdio.h>

int main() {
    int a[50], n, i, choice, pos, element;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter array elements:\n");
    for (i = 0; i < n; i++) {
        scanf("%d", &a[i]);
    }

    while (1) {
        printf("\nMenu");
        printf("\n1. Insert");
        printf("\n2. Delete");
        printf("\n3. Display");
        printf("\n4. Exit");
        printf("\nEnter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
        case 1:
            printf("Enter position to insert: ");
            scanf("%d", &pos);
            printf("Enter element to insert: ");
            scanf("%d", &element);

            for (i = n - 1; i >= pos - 1; i--) {
                a[i + 1] = a[i];
            }
            a[pos - 1] = element;
            n++;
            break;

        case 2:
            printf("Enter position to delete: ");
            scanf("%d", &pos);

            for (i = pos - 1; i < n - 1; i++) {
                a[i] = a[i + 1];
            }
            n--;
            break;

        case 3:
            printf("Array elements are:\n");
            for (i = 0; i < n; i++) {
                printf("%d ", a[i]);
            }
            printf("\n");
            break;

        case 4:
            return 0;

        default:
            printf("Invalid choice");
        }
    }
}
